<%= form_with(model:[:admin, radio], local: true) do |form| %>
  <%= render 'admin/shared/errors', object: radio %>

  <div class="form-group row">
    <%= form.label :title, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <!--# TODO: ここの見た目はもう少し考えた方がいいかも-->
  <div class="form-group row">
    <%= form.label :personalities, class: 'col-md-2 control-label' %>
    <div class="col-md-10 form-check">
      <%= collection_check_boxes(:radio, :personality_ids, Personality.all, :id, :name) do |b| %>
        <%= b.check_box %>
        <%= b.label %>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :mp3, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :mp3, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :duration, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :duration, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :size, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :size, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :youtube_url, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :youtube_url, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :podcast_url, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :podcast_url, class: 'form-control' %>
    </div>
  </div>

  <!-- TODO: 公開/非公開のtoggle的な感じのUIにする -->
  <div class="form-group row">
    <%= form.label :published_at, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.datetime_select :published_at, use_month_numbers: true, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
