<dl class="dl-horizontal">
  <dt><strong><%= Event.human_attribute_name('name') %> :</strong></dt>
  <dd><%= @event.name %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong><%= Event.human_attribute_name('description') %> :</strong></dt>
  <dd><%= MarkdownHelper.markdown(@event.description) %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong><%= Event.human_attribute_name('url') %> :</strong></dt>
  <dd><%= link_to @event.url, @event.url %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong><%= Event.human_attribute_name('hosts') %> :</strong></dt>
  <dd>
    <% @event.hosts.each do |host| %>
      <%= link_to host.name, admin_community_path(host) %><br>
    <% end %>
  </dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong><%= Event.human_attribute_name('started_at') %> :</strong></dt>
  <dd><%= @event.started_at %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong><%= Event.human_attribute_name('ended_at') %> :</strong></dt>
  <dd><%= @event.ended_at %></dd>
</dl>

<%= Admin::EventViewObject.link_to_edit(current_personality, @event) %>
