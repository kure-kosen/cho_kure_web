<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-8">
    <h1>イベント一覧</h1>
  </div>
  <div class="col-4">
    <%= Admin::EventViewObject.link_to_new(current_personality) %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Event.human_attribute_name('name') %></th>
      <th><%= Event.human_attribute_name('url') %></th>
      <th><%= Event.human_attribute_name('started_at') %></th>
      <th><%= Event.human_attribute_name('ended_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= link_to event.url, event.url %></td>
        <td><%= event.started_at %></td>
        <td><%= event.ended_at %></td>
        <td><%= Admin::EventViewObject.link_to_show(current_personality, event) %></td>
        <td><%= Admin::EventViewObject.link_to_edit(current_personality, event) %></td>
        <td><%= Admin::EventViewObject.link_to_destroy(current_personality, event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
