<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-8">
    <h1>専門用語一覧</h1>
  </div>
  <div class="col-4">
    <%= link_to '新規専門用語作成', new_admin_jargon_path, class: 'btn btn-primary' %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Jargon.human_attribute_name('name') %></th>
      <th><%= Jargon.human_attribute_name('description') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jargons.each do |jargon| %>
      <tr>
        <td><%= jargon.name %></td>
        <td><%= truncate(jargon.description) %></td>
        <td><%= link_to '詳細', admin_jargon_path(jargon) %></td>
        <td><%= link_to '編集', edit_admin_jargon_path(jargon) %></td>
        <td><%= link_to '削除', admin_jargon_path(jargon), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
