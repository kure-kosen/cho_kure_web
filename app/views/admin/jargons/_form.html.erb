<%= form_with(model: [:admin, jargon], local: true) do |form| %>
  <%= render 'admin/shared/errors', object: jargon %>

  <div class="form-group row">
    <%= form.label :name, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :radio_id, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.select :radio_id, Radio.pluck(:title, :id), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :major, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.select :major, JargonMajors.labels, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
