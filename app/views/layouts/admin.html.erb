<!DOCTYPE html>
<html lang="ja">

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>[ADMIN]ちょっときいて呉高専</title>
  <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'admin', 'data-turbolinks-track': 'reload' %>
  <!-- Realtime preview -->
  <script src='https://cdnjs.cloudflare.com/ajax/libs/vue/1.0.10/vue.js'></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/marked/0.3.5/marked.js'></script>
  <%= csrf_meta_tags %>
</head>

<body class="fixed-nav bg-dark">
<nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
  <%= link_to "[ADMIN]ちょっときいて呉高専", admin_root_path, class: "navbar-brand" %>
  <div class="collapse navbar-collapse">
    <ul class="navbar-nav navbar-sidenav">
      <li class="nav-item">
        <%= link_to admin_root_path, class: "nav-link" do %>
          <i class="fa fa-fw fa-dashboard"></i>
          <span class="nav-link-text">ダッシュボード</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to admin_personalities_path, class: "nav-link" do %>
          <i class="fa fa-fw fa-user-circle-o"></i>
          <span class="nav-link-text">パーソナリティ一覧</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to admin_radios_path, class: "nav-link" do %>
          <i class="fa fa-fw fa-headphones"></i>
          <span class="nav-link-text">ラジオ一覧</span>
        <% end %>
      </li>

      <% if current_personality.member? %>
        <li class="nav-item">
          <%= link_to admin_communities_path, class: "nav-link" do %>
            <i class="fa fa-fw fa-users"></i>
            <span class="nav-link-text">コミュニティ一覧</span>
          <% end %>
        </li>
      <% end %>

      <% if current_personality.member? %>
        <li class="nav-item">
          <%= link_to admin_events_path, class: "nav-link" do %>
            <i class="fa fa-fw fa-calendar"></i>
            <span class="nav-link-text">イベント一覧</span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
<div class="content-wrapper">
  <div class="container-fluid">
    <%= yield %>
  </div>
</div>
</body>
</html>
