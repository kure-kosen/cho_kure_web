{
  "compilerOptions": {
    "sourceMap": true,
    "module": "es2015",
    "target": "es2018",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": "./",
    "allowJs": false,
    "rootDir": "../",
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "newLine": "LF"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "webpack",
    "jest",
    "**/*/*.test.ts"
  ]
}
